{
  "openapi": "3.1.0",
  "info": {
    "title": "Freshrank",
    "version": "0.1.0"
  },
  "paths": {
    "/rerank": {
      "post": {
        "summary": "Rank",
        "operationId": "rank_rerank_post",
        "parameters": [
          {
            "name": "regulatory",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Force regulatory weighting on/off/auto",
              "title": "Regulatory"
            },
            "description": "Force regulatory weighting on/off/auto"
          },
          {
            "name": "x_regulatory",
            "in": "header",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "title": "X Regulatory"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RankRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RankResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/admin/reload-config": {
      "post": {
        "summary": "Reload Config",
        "operationId": "reload_config_admin_reload_config_post",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/metrics/regulatory": {
      "get": {
        "summary": "Regulatory Metrics",
        "operationId": "regulatory_metrics_metrics_regulatory_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DocumentPayload": {
        "properties": {
          "doc_id": {
            "type": "string",
            "title": "Doc Id"
          },
          "chunk_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Chunk Id"
          },
          "relevance": {
            "type": "number",
            "minimum": 0.0,
            "title": "Relevance",
            "default": 0.0
          },
          "effective_date": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Effective Date"
          },
          "expired": {
            "type": "boolean",
            "title": "Expired",
            "default": false
          },
          "publish_date": {
            "anyOf": [
              {
                "type": "string",
                "format": "date-time"
              },
              {
                "type": "null"
              }
            ],
            "title": "Publish Date"
          },
          "status": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Status"
          },
          "doc_type": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Doc Type"
          },
          "tags": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Tags"
          }
        },
        "type": "object",
        "required": [
          "doc_id"
        ],
        "title": "DocumentPayload"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "RankRequest": {
        "properties": {
          "query": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Query"
          },
          "intent": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Intent"
          },
          "regulatory": {
            "type": "string",
            "enum": [
              "auto",
              "on",
              "off"
            ],
            "title": "Regulatory",
            "default": "auto"
          },
          "documents": {
            "items": {
              "$ref": "#/components/schemas/DocumentPayload"
            },
            "type": "array",
            "title": "Documents"
          }
        },
        "type": "object",
        "required": [
          "documents"
        ],
        "title": "RankRequest"
      },
      "RankResponse": {
        "properties": {
          "results": {
            "items": {
              "$ref": "#/components/schemas/RankedItem"
            },
            "type": "array",
            "title": "Results"
          }
        },
        "type": "object",
        "required": [
          "results"
        ],
        "title": "RankResponse"
      },
      "RankedItem": {
        "properties": {
          "doc_id": {
            "type": "string",
            "title": "Doc Id"
          },
          "chunk_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Chunk Id"
          },
          "final_score": {
            "type": "number",
            "title": "Final Score"
          },
          "score_breakdown": {
            "additionalProperties": true,
            "type": "object",
            "title": "Score Breakdown"
          },
          "tags": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Tags",
            "default": []
          },
          "evidence": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Evidence",
            "default": []
          }
        },
        "type": "object",
        "required": [
          "doc_id",
          "final_score",
          "score_breakdown"
        ],
        "title": "RankedItem"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}